<h1> New Message</h1>

<% if @message.errors.any? %>
  <p>Something went wrong</p>
  <ul>
    <% @message.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @message do |f| %>
  <%= f.label :to %>
  <%= f.collection_check_boxes(:to, Contact.all, :phone, :name) %>
  <%= f.label :from %>
  <%= f.text_field :from %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  
  <%= f.submit %>
<% end %>